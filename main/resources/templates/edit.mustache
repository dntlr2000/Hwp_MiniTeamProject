{{>layouts/header}}

{{#diary}}
    <form action="/diary/update" method="post">
        <input type="hidden" name="id" value="{{id}}">

        <div class="mb-3">
            <label for="title" class="form-label">제목</label>
            <input id="title" name="title" value="{{title}}" class="form-control">
        </div>

        <div class="mb-3">
            <label for="content" class="form-label">내용</label>
            <textarea id="content" name="content" class="form-control" rows="4">{{content}}</textarea>
        </div>

        <div class="mb-3">
            <label for="emoji" class="form-label">오늘의 기분</label>
            <select id="emoji" name="emoji" class="form-select w-auto">
                <option value="😃" {{#isHappy}}selected{{/isHappy}}>😃 즐거워요</option>
                <option value="😢" {{#isSad}}selected{{/isSad}}>😢 슬퍼요</option>
                <option value="😠" {{#isAngry}}selected{{/isAngry}}>😠 화나요</option>
                <option value="😨" {{#isFear}}selected{{/isFear}}>😨 무서워요</option>
            </select>
        </div>

        <button type="submit" class="btn btn-warning">수정하기</button>
        <a href="/diary/{{id}}" class="btn btn-secondary ms-2">취소</a>
    </form>
{{/diary}}

{{>layouts/footer}}
